<% admins_only do %>
  <ul class="actions">
    <li><%= link_to "Edit Project", edit_admin_project_path(@project),
      class: "edit" %></li>

    <li><%= link_to "Delete Project", admin_project_path(@project),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this project?" },
      class: "delete" %></li>
  </ul>
<% end %>